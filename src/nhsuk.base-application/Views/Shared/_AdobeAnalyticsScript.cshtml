@model nhsuk.base_application.ViewModels.AdobeAnalyticsViewModel

@if (Model != null && Model.ScriptUrl != null && Model.PageName != null && Model.Categories != null)
{
    <script src="@Model.ScriptUrl" type="text/plain" data-cookieconsent="statistics" defer></script>
    <script type="text/javascript">
        window.digitalData = {
            "page": {
                "pageInfo": { "pageName": "@Model.PageName" },
                "category": @Html.Raw(@Model.Categories)
            }
        };
    </script>
}
